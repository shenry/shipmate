<h1>Users Index</h1>
<br />
<table>
	<tr>
		<th>Login</th>
		<th>Name</th>
		<th>Access</th>
		<th>Wineries</th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%=h user.login %></td>
			<td><%=h user.full_name %></td>
			<td><%=h user.access %></td>
			<td><%= user.wineries.collect {|w| w.name }.join(', ') %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Delete', user_path(user), :confirm => 'Are you sure you want to permanently delete this user?',
			 											:method => 'delete' %></td>
		</tr>
	<% end %>
</table>
<p>
	<%= link_to 'New User', new_user_path %>
</p>
