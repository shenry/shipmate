<% @page_title = "Shipments List"%>
<h3>Listing Shipments to <%= Time.now.to_date - 1 %></h3>
<table border=1>
	<tr>
		<th>Date</th>
		<th>From</th>
		<th>To</th>
		<th>Wine</th>
		<th>Loads</th>
		<th>Total Gallons</th>
		<th>Status</th>
	</tr>
	<% @shipments.each do |shipment| -%>
		<tr>
			<td><%=h shipment.ship_date %></td>
			<td><%=h shipment.from_winery.name %></td>
			<td><%=h shipment.to_winery.name %></td>
			<td><%=h shipment.wine %></td>
			<td><%=h shipment.loads %></td>
			<td><%=h shipment.loads * shipment.gals_per_load %></td>
			<td><%=h shipment.status %></td>
			<td><%= link_to "Edit", edit_shipment_path(shipment) %></td>
			<td><%= link_to "Ship More", additional_shipment_path(shipment) %></td>
		</tr>
	<% end -%>
</table>
<br />
<%= link_to "New Shipment", new_shipment_path %>