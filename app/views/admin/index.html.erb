<h1>Login</h1>
<% form_tag :controller => 'admin', :action => 'login' do %>
	<table>
		<tr>
			<td align='right'>Login</td>
			<td><%= text_field_tag :login, nil, :size => 18 %></td>
		</tr>
		<tr>
			<td align='right'>Password</td>
			<td><%= password_field_tag :password, nil, :size => 18 %></td>
		</tr>
		<tr><td>&nbsp;</td></tr>
		<tr>
			<td align='right'><%= submit_tag 'Login' %></td>
		</tr>
	</table>
<% end %>