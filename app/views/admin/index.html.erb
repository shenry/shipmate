<h1>Login</h1>
<p>
	<%= flash[:notice] %>
</p>

<% form_tag :controller => 'admin', :action => 'login' do %>
	<table>
		<tr>
			<td>Login</td>
			<td><%= text_field_tag :login %></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><%= password_field_tag :password %></td>
		</tr>
		<tr>
			<td><%= submit_tag 'Login' %></td>
		</tr>
	</table>
<% end %>